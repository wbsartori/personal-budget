generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum movementType {
  ENTRY
  ISSUE
}

model Person {
    id String @id @default(uuid())
    name String
    birthDate String
    gender String
    email String

    @@map("person")
}

model Movement {
    id String @id @default(uuid())
    id_person String
    description String
    type movementType @default(ENTRY)
    value String
    createdAt DateTime

    @@map("movement")
}

model BillsToPay{}
