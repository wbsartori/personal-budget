// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Person {
    id String @id @default(uuid())
    name String
    birthDate String
    gender String
    email String
    status String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    movement Movement[]
    income Income[]
    @@map("person")
}

model Income {
    id String @id @default(uuid())
    idPerson String
    description String
    incomeDate String
    value Decimal

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    person Person @relation(fields: [idPerson], references: [id])
    @@map("income")
}

model Movement {
    id String @id @default(uuid())
    idPerson String
    description String
    classification String
    typeOfCost String
    movementDate String
    value Decimal
    status String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    person Person @relation(fields: [idPerson], references: [id])

    @@map("movement")
}